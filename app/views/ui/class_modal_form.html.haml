.modal-dialog
  .modal-content
    .model-header
      %button{type: "button", class: "close", 'data-dismiss' => "modal", 'aria-label' => "Close"}
        %span{'aria-hidden' => 'true'} &times;
      %h3= title
    .modal-body
      = bootstrap_form_tag url: '#', layout: :horizontal, label_col: 'col-md-3', control_col: 'col-md-6') do |f|
        = f.alert_message "Please fix the following errors:"
        = f.text_field :title, label: "Course Title"
        = f.text_field :code, label: "Course Code"
        = f.text_field :location, label: "Location"
        = f.select :days, Date::DAYNAMES.map.with_index{ |day, i| [day.to_s, i] }

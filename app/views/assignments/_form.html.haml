.container
  .well.col-md-offset-2.col-md-6
    %h3.text-center.text-primary= title
    %br/
    .center-block
      = bootstrap_form_for(@assignment, layout: :horizontal, label_col: 'col-md-3', control_col: 'col-md-6') do |f|
        %fieldset
          = f.alert_message "Please fix the following errors:"
          = f.text_field :title
          = f.text_field :due_date, data: {"provide" => 'datepicker', "date-format" => "yyyy-mm-dd" }
          = f.text_area :description, rows: 10
          = f.number_field :point_value
        %fieldset.control-group.col-md-offset-7
          = f.submit "Submit", class: 'btn btn-primary'
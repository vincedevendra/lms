.well.col-sm-10.info-card{id: "assignment_#{assignment.id}"}
  .title-bar
    .submission-count.pull-left
      - if current_user.instructor?
        - if assignment.submission_required?
          =link_to course_assignment_submissions_path(course, assignment), class: 'btn btn-primary btn-sm' do
            Submissions
            %span.badge= assignment.submissions.count
        - else
          =link_to "Input Grades", course_assignment_submissions_path(course, assignment), class: 'btn btn-primary btn-sm'
    .dropdown.pull-right
      %a.dropdown-toggle.hamburger{type: "button", "data-toggle" => "dropdown"}
        %span.glyphicon.glyphicon-menu-hamburger
      %ul.dropdown-menu
        - if current_user.instructor?
          %li
            = link_to edit_course_assignment_path(assignment.course, assignment), remote: true  do
              %span.glyphicon.glyphicon-pencil
              Edit
            = link_to course_assignment_path(assignment.course, assignment), method: :delete, data: { confirm: "Are you sure you want to delete this assignment?"} do
              %span.glyphicon.glyphicon-remove
              Delete
    .main-text.text-center.assignment-title
      %h3= assignment.title
    .col-sm-4
      %dt Due Date
      %dd= assignment.due_date.strftime("%A, %b %d")
      %dt Assigned On
      %dd= assignment.created_at.strftime("%A, %b %d")
      %dt Point Value
      %dd= assignment.point_value
    .col-sm-4
      %dt Description
      %dd= assignment.description
    - unless current_user.instructor?
      .col-sm-4
        %dt Current Submission
        %dd= submission.new_record? ? 'No File Uploaded' : "#{submission.submission.file.filename}"
        %dt Choose a New File
        %dd
          = bootstrap_form_for([assignment.course, assignment, submission], inline_errors: false) do |f|
            .fieldset
              = f.file_field :submission, hide_label: true
              = f.submit 'Upload', class: 'btn btn-xs'

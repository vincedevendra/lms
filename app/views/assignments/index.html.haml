.modal.fade#modal_form
%section.container.assignments
  .row
    .col-md-10
      .course-title.header
        = link_to "PL1070", "#", class: 'title'
        = link_to new_assignment_path, remote: true, class: 'new-card'  do
          %span.glyphicon.glyphicon-plus
    - @assignments.each do |assignment|
      .well.col-sm-10.info-card
        .title-bar
          .submission-count.pull-left
            =link_to "#", class: 'btn btn-primary btn-sm' do
              Submissions
              %span.badge 12
          .dropdown.pull-right
            %a.dropdown-toggle.cog{type: "button", "data-toggle" => "dropdown"}
              %span.glyphicon.glyphicon-cog
            %ul.dropdown-menu
              %li
                = link_to edit_assignment_path(assignment), remote: true  do
                  %span.glyphicon.glyphicon-pencil
                  Edit
                = link_to assignment, method: :delete, data: { confirm: "Are you sure you want to delete this assignment?"} do
                  %span.glyphicon.glyphicon-remove
                  Delete
          .main-text.text-center
            %h3= assignment.title
        .col-sm-3
          %dt Due Date
          %dd= assignment.due_date.strftime("%A, %b %d")
          %dt Assigned On
          %dd= assignment.created_at.strftime("%A, %b %d")
          %dt Point Value
          %dd= assignment.point_value
        .col-sm-8
          %dt Description
          %dd= assignment.description

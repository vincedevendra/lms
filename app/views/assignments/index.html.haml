/ .col-md-2
/   %ul.nav.nav-pills.nav-stacked
/     %li.active
/       %a{href: '/'} Current Assignments
/     %li
/       %a{href: '/'} Submitted Assignments
.container
  .col-md-10
    - if current_user.professor?
      = link_to "+ New Assignment", new_assignment_path, class: 'btn btn-success'
      %br/
      %br/
    - @assignments.each do |assignment|
      .well
        - if current_user.professor?
          .dropdown.pull-right
            %button.btn.btn-warning.dropdown-toggle{type: "button", "data-toggle" => "dropdown"} 
              Options
              %span.caret
            %ul.dropdown-menu
              %li 
                = link_to "Edit", edit_assignment_path(assignment)
                = link_to "Delete", assignment, method: :delete, data: { confirm: "Are you sure you want to delete this assignment?"}
        %dt= assignment.title
        %br/
        %dt Due Date
        %dd= assignment.due_date.strftime("%A, %b %d")
        %br/
        %dt Description
        %dd= assignment.description
        %br/
        %dt Assigned On
        %dd= assignment.created_at.strftime("%A, %b %d")
        %br/
        %dt Point Value
        %dd= assignment.point_value
    

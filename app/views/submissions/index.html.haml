%section.container.assignments
  .row
    .col-md-12
      .header= @course.display_title
      %table.table.table-hover
        %thead
          %tr.text-center
            %th First Name
            %th Last Name
            %th Student ID
            %th Submission Date
            %th View and Comment
            %th Download
            %th Grade (Out of 10)
        %tbody
          - if @students.any?
            - @students.each do |student|
              %tr
                %td= student.first_name
                %td= student.last_name
                %td= student.student_id
                - submission = student.assignment_submission(@assignment)
                - if submission
                  %td= student.display_submission_time(@assignment)
                  %td
                    =link_to submission_path(submission) do
                      %span.glyphicon.glyphicon-eye-open
                  %td
                    = link_to submission_url do
                      %span.glyphicon.glyphicon-download-alt
                  %td
                    = bootstrap_form_for([@course, @assignment, submission]) do |f|
                      = f.text_field :grade, class: 'input-sm pull-left'
                      = f.submit 'Submit Grade', class: 'btn btn-sm btn-default'

                - else
                  - 4.times do
                    %td no submission

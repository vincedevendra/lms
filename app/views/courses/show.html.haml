%section.container
  .row
    .col-md-12
      .header Course: #{@course.display_title}
      %table.table.table-hover
        %thead
          %tr.text-center
            %th First Name
            %th Last Name
            %th Student ID
            - @assignments.each do |assignment|
              %th= assignment.display_title_with_point_value
            %th Course Average
            %th Course Grade
        %tbody
          - @course.students.each do |student|
            %tr
              %td= student.first_name
              %td= student.last_name
              %td= student.student_id
              - @course.assignments.each do |assignment|
                %td= student.grade_for(assignment)
              %td= student.display_course_average
              %td= student.course_letter_grade
        %tfoot
          %tr
            %td Course Averages
            - 2.times do
              %td
            - @assignments.each do |assignment|
              %td= assignment.display_average_grade
            %td= @course.display_average_grade
            %td= @course.avg_letter_grade
          %tr
            %td Course Median
            - 2.times do
              %td
            - @assignments.each do |assignment|
              %td= assignment.median_grade
            %td= @course.display_median_grade
            %td= @course.median_letter_grade
